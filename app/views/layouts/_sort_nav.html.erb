<div class="blue-head">
	<div class="container">
		<%= image_tag "logo.png" %>
	</div>
</div>
	<div class="light-blue-header" data-spy="affix" id="sorter">
		<div class='container'>
			<h1 class="pull-left hidden-xs">Board of Governors Exam</h1>
			<div class="pull-right">
			 <% if admin_signed_in? %>
				<div class="btn-group" style="margin-right:25px;">
				    <%= link_to new_member_path do %>
	      				<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> New Member</button>
	   			    <% end %>
	   			    <%= link_to root_path do %>
	      				<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-th-list"></span> Sort List</button>
	   			    <% end %>
				</div>
				<div class="btn-group">
				  <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown">
				    Signed in as <strong style="color:#ffffff;">Admin</strong> <span class="caret"></span>
				  </button>
					<ul class="dropdown-menu" role="menu">
					    <li><%= link_to "Edit Password", edit_admin_registration_path %></li>
					    <li><%= link_to "Log out", destroy_admin_session_path, method: :delete %></li>
				    </ul>
				</div>
			<% else %>
				<button type="button" class="btn btn-default pop shuffle filter sort" data-sort="random" data-toggle="tooltip" data-placement="left" title="Shuffle"><span class="glyphicon glyphicon-refresh"></span></button>
				<div class="btn-group" data-toggle="buttons" style="margin-right:25px;">
					  <label class="btn btn-dark active tint">
					    <input type="radio" name="options" id="option2" autocomplete="off"> Color</label>
					  <label class="btn btn-dark tint">
					    <input type="radio" name="options" id="option3" autocomplete="off"> Grey</label>
				</div>
				<div class="btn-group">
					<button type="button" data-filter="all" class="btn btn-dark active filter">All</button>
					<button type="button" data-filter=".chair" class="btn btn-dark filter">Chairman</button>
					<button type="button" data-filter=".gov" class="btn btn-dark filter">Board</button>
				</div>
			<% end %>	
			</div>
		</div>
    </div> 
